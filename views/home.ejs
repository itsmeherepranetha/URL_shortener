<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        body{
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
</head>
<body>
    <h1>URL Shortener</h1>
    <div>
        <form action="/url" method="POST">
            <label for="">Enter an URL</label>
            <input type="text" placeholder="https://example.com" name="url" id="" required>
            <button type="submit">Generate Short URL</button>
        </form>
    </div>
    <%if(typeof id!='undefined' && id!=null){ %>
        <p>Short URL generated ---> <a href="http://localhost:8000/<%=id%>" target="_blank">http://localhost:8000/<%=id%></a></p>
    <%} %>

    <%if(typeof urls!='undefined' && urls!=null){ %>
        <table>
            <thead>
                <th>S. No</th>
                <th>Short ID</th>
                <th>Redirect</th>
                <th>Clicks</th>
            </thead>
            <tbody>
                <% urls.forEach((url,index)=> { %>
                    <tr>
                        <td><%=index+1 %></td>
                        <td><%=url.nanoId %></td>
                        <td><%=url.redirectUrl %></td>
                        <td><%=url.visitHistory.length %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <%} %>
</body>
</html>